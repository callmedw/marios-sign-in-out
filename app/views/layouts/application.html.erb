<!DOCTYPE html>
<html>
  <head>
    <title>Marios</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="containter">
      <% if current_user %>
      <%= current_user.user_name %> | <%= link_to "Sign out", '/signout' %>
    <% else %>
      <%= link_to "Sign up", 'signup' %> | <%= link_to "Sign in", '/signin' %> |
    <% end %>
    <%= link_to "Home", '/' %>

    <div class="alerts">
      <%= flash[:alert] %>
      <%= flash[:notice] %>
    </div>
    
    <%= yield %>
    </div>
  </body>
</html>
